<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MyFirstApp.MarkupExtensions"
             x:Class="MyFirstApp.Views.MainPage">
    <Grid RowDefinitions="*, *, 50">
        <Image WidthRequest="90" 
               HeightRequest="90" 
               VerticalOptions="End"
               Source="{local:EmbededImageExtensions MyFirstApp.Images.logo.png}"/>
        <Label Text="Godel Assistance" 
               TextColor="{StaticResource blue}" 
               FontSize="26"
               LineHeight="22"
               FontFamily="Roboto-Bold"
               HorizontalTextAlignment="Center" 
               TextTransform="Uppercase"
               Grid.Row="1"
               Margin="0,20,0,0"/>
        <Button Style="{StaticResource buttonStyle}"
                Text="Get Started"  
                Grid.Row="2" 
                VerticalOptions="Center"
                Command="{Binding GetStarted}"/>
    </Grid>
</ContentPage>